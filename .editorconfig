; This file is for unifying the coding style for different editors and IDEs.
; More information at http://editorconfig.org

root = true

[*]
charset = utf-8
indent_size = 4
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
block_comment_start = /*
block_comment = *
block_comment_end = */

[*.md]
; Skip indent check because of code blocks
indent_size = unset
trim_trailing_whitespace = false

[{*.json,*.yml}]
indent_size = 2

[tests/laravel-test.sh]
; Contains here documents
indent_size = unset
